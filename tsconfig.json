{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "esModuleInterop": true,
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@contexts/*": [
        "./contexts/*"
      ],
      "@common/*": [
        "./common/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "src/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.cy.ts",
    "cypress/e2e/Auth.cy.ts",
    "cypress/e2e/Auth.cy.ts"
  ],
  "plugins": []
}